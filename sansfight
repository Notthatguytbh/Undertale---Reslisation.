def tpback():
  x, y = t.position()
  if(x > 300):
    t.goto(150,-150)

  if(y < -300):
    t.goto(150,-150)

  if(y > 0):
    t.goto(150,-150)

  if(x < 0):
    t.goto(150,-150)



